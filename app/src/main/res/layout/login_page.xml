<!-- res/layout/main_activity.xml -->
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:padding="16dp"
	android:gravity="center">

	<!-- Heading -->
	<TextView
		android:layout_marginBottom="12dp"
		android:id="@+id/textViewHeading"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Welcome"
		android:textSize="42dp"
		android:textColor="@color/welcome_color"
		android:textStyle="bold" />

	<!-- Circle Image Views -->
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_marginTop="12dp"
		android:gravity="center">

		<!-- Image View 1 and Text View 1 -->
		<LinearLayout
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:orientation="vertical"
			android:gravity="center">

			<!-- Circle Image View 1 -->
			<ImageView
				android:contextClickable="true"
				android:id="@+id/circleImageView1"
				android:layout_width="100dp"
				android:layout_height="100dp"
				android:src="@drawable/client_img_ek2"
				android:layout_margin="8dp"
				android:contentDescription="Image 1" />

			<!-- Text View 1 -->
			<TextView
				android:id="@+id/textView1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="CLIENT"
				android:textSize="18sp"
				android:layout_marginTop="8dp" />
		</LinearLayout>

		<!-- Image View 2 and Text View 2 -->
		<LinearLayout
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:orientation="vertical"
			android:gravity="center">

			<!-- Circle Image View 2 -->
			<ImageView
				android:contextClickable="true"
				android:id="@+id/circleImageView2"
				android:layout_width="100dp"
				android:layout_height="100dp"
				android:src="@drawable/client_img_ek2"
				android:layout_margin="8dp"
				android:contentDescription="Image 2" />

			<!-- Text View 2 -->
			<TextView
				android:id="@+id/textView2"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="WORKER"
				android:textSize="18sp"
				android:layout_marginTop="8dp" />
		</LinearLayout>
	</LinearLayout>


	<!-- Mobile Number EditText -->
	<EditText
		android:id="@+id/editTextPhoneNumber"
		android:layout_width="match_parent"
		android:layout_height="48dp"
		android:layout_marginTop="12dp"
		android:hint="Enter Phone Number"
		android:inputType="phone" />

	<androidx.appcompat.widget.AppCompatButton
		android:id="@+id/buttonSubmit"
		android:layout_width="match_parent"
		android:layout_height="48dp"
		android:layout_marginTop="12dp"
		android:text="PROCEED"
		android:textColor="@color/white"
		android:background="@color/welcome_color" />


</LinearLayout>
